<?xml version="1.0" encoding="utf-8"?>

<Page
    x:Class="qingzhu.Views.OpcUaPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:qingzhu.ViewModels"
    xmlns:converters="using:qingzhu.Converters"
    mc:Ignorable="d">

    <Page.DataContext>
        <viewmodels:OpcUaViewModel />
    </Page.DataContext>

    <Page.Resources>
        <converters:BoolNegationConverter x:Key="BoolNegationConverter" />
    </Page.Resources>

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Spacing="8" Margin="0,0,0,24">
            <TextBlock Text="OPC UA 模拟器" Style="{StaticResource TitleTextBlockStyle}" />
            <TextBlock
                Text="模拟 OPC UA 服务器，支持标准数据模型"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320" />
                <ColumnDefinition Width="16" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Settings -->
            <Border
                Grid.Column="0"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="16">
                <ScrollViewer>
                    <StackPanel Spacing="16">
                        <TextBlock Text="服务器配置" Style="{StaticResource SubtitleTextBlockStyle}" />

                        <!-- Server Settings -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="端点 URL" FontWeight="SemiBold" />
                            <TextBox
                                Text="{x:Bind ViewModel.EndpointUrl, Mode=TwoWay}"
                                IsReadOnly="True" />
                        </StackPanel>

                        <StackPanel Spacing="8">
                            <TextBlock Text="服务器名称" FontWeight="SemiBold" />
                            <TextBox Text="{x:Bind ViewModel.ServerName, Mode=TwoWay}" />
                        </StackPanel>

                        <StackPanel Spacing="8">
                            <TextBlock Text="端口" FontWeight="SemiBold" />
                            <NumberBox
                                Value="{x:Bind ViewModel.Port, Mode=TwoWay}"
                                Minimum="1"
                                Maximum="65535"
                                SpinButtonPlacementMode="Inline" />
                        </StackPanel>

                        <!-- Security Settings -->
                        <Expander Header="安全设置" HorizontalAlignment="Stretch">
                            <StackPanel Spacing="8" Padding="0,8,0,0">
                                <ComboBox
                                    Header="安全策略"
                                    SelectedIndex="0"
                                    HorizontalAlignment="Stretch">
                                    <ComboBoxItem Content="None" />
                                    <ComboBoxItem Content="Basic128Rsa15" />
                                    <ComboBoxItem Content="Basic256" />
                                    <ComboBoxItem Content="Basic256Sha256" />
                                </ComboBox>

                                <ComboBox
                                    Header="安全模式"
                                    SelectedIndex="0"
                                    HorizontalAlignment="Stretch">
                                    <ComboBoxItem Content="None" />
                                    <ComboBoxItem Content="Sign" />
                                    <ComboBoxItem Content="SignAndEncrypt" />
                                </ComboBox>

                                <CheckBox Content="启用匿名访问" IsChecked="{x:Bind ViewModel.AnonymousAccess, Mode=TwoWay}" />
                                <CheckBox Content="启用用户名/密码认证" IsChecked="{x:Bind ViewModel.UsernamePasswordAuth, Mode=TwoWay}" />
                            </StackPanel>
                        </Expander>

                        <!-- Control Buttons -->
                        <StackPanel Spacing="8" Margin="0,16,0,0">
                            <Button
                                Content="启动服务器"
                                Style="{StaticResource AccentButtonStyle}"
                                HorizontalAlignment="Stretch"
                                Command="{x:Bind ViewModel.StartServerCommand}"
                                IsEnabled="{x:Bind ViewModel.IsServerRunning, Mode=OneWay, Converter={StaticResource BoolNegationConverter}}" />
                            <Button
                                Content="停止服务器"
                                HorizontalAlignment="Stretch"
                                Command="{x:Bind ViewModel.StopServerCommand}"
                                IsEnabled="{x:Bind ViewModel.IsServerRunning, Mode=OneWay}" />
                        </StackPanel>

                        <!-- Status -->
                        <Border
                            Background="{ThemeResource LayerFillColorDefaultBrush}"
                            CornerRadius="4"
                            Padding="12"
                            Margin="0,16,0,0">
                            <StackPanel Spacing="8">
                                <TextBlock Text="服务器状态" FontWeight="SemiBold" />
                                <StackPanel Spacing="4">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Text="状态:"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                        <TextBlock
                                            Grid.Column="1"
                                            Text="{x:Bind ViewModel.ServerStatus, Mode=OneWay}"
                                            HorizontalAlignment="Right"
                                            Foreground="{ThemeResource SystemFillColorCriticalBrush}" />
                                    </Grid>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Text="会话数:"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                        <TextBlock
                                            Grid.Column="1"
                                            Text="{x:Bind ViewModel.SessionCount, Mode=OneWay}"
                                            HorizontalAlignment="Right" />
                                    </Grid>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Text="订阅数:"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                        <TextBlock
                                            Grid.Column="1"
                                            Text="{x:Bind ViewModel.SubscriptionCount, Mode=OneWay}"
                                            HorizontalAlignment="Right" />
                                    </Grid>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Right Panel - Node Tree & Data -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="16" />
                    <RowDefinition Height="200" />
                </Grid.RowDefinitions>

                <!-- Address Space Tree -->
                <Border
                    Grid.Row="0"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Grid
                            Grid.Row="0"
                            Padding="16,12"
                            Background="{ThemeResource LayerFillColorDefaultBrush}"
                            CornerRadius="8,8,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Text="地址空间 (Address Space)"
                                Style="{StaticResource SubtitleTextBlockStyle}"
                                VerticalAlignment="Center" />
                            <StackPanel
                                Grid.Column="1"
                                Orientation="Horizontal"
                                Spacing="8">
                                <Button Content="添加节点" Command="{x:Bind ViewModel.AddNodeCommand}" />
                                <Button Content="导入" Command="{x:Bind ViewModel.ImportNodesCommand}" />
                                <Button Content="导出" Command="{x:Bind ViewModel.ExportNodesCommand}" />
                            </StackPanel>
                        </Grid>

                        <TreeView Grid.Row="1" Padding="16">
                            <TreeView.RootNodes>
                                <TreeViewNode Content="Objects" IsExpanded="True">
                                    <TreeViewNode.Children>
                                        <TreeViewNode Content="Server">
                                            <TreeViewNode.Children>
                                                <TreeViewNode Content="ServerStatus" />
                                                <TreeViewNode Content="ServiceLevel" />
                                            </TreeViewNode.Children>
                                        </TreeViewNode>
                                        <TreeViewNode Content="DeviceSet" IsExpanded="True">
                                            <TreeViewNode.Children>
                                                <TreeViewNode Content="Device1">
                                                    <TreeViewNode.Children>
                                                        <TreeViewNode Content="Temperature" />
                                                        <TreeViewNode Content="Pressure" />
                                                        <TreeViewNode Content="Status" />
                                                    </TreeViewNode.Children>
                                                </TreeViewNode>
                                            </TreeViewNode.Children>
                                        </TreeViewNode>
                                    </TreeViewNode.Children>
                                </TreeViewNode>
                                <TreeViewNode Content="Types" />
                                <TreeViewNode Content="Views" />
                            </TreeView.RootNodes>
                        </TreeView>
                    </Grid>
                </Border>

                <!-- Node Properties -->
                <Border
                    Grid.Row="2"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Grid
                            Grid.Row="0"
                            Padding="16,12"
                            Background="{ThemeResource LayerFillColorDefaultBrush}"
                            CornerRadius="8,8,0,0">
                            <TextBlock
                                Text="节点属性"
                                Style="{StaticResource SubtitleTextBlockStyle}"
                                VerticalAlignment="Center" />
                        </Grid>

                        <ScrollViewer Grid.Row="1" Padding="16">
                            <StackPanel Spacing="12">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="节点 ID:" VerticalAlignment="Center" />
                                    <TextBox
                                        Grid.Column="1"
                                        IsReadOnly="True"
                                        Text="-" />
                                </Grid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="显示名称:" VerticalAlignment="Center" />
                                    <TextBox
                                        Grid.Column="1"
                                        PlaceholderText="节点名称" />
                                </Grid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="数据类型:" VerticalAlignment="Center" />
                                    <ComboBox
                                        Grid.Column="1"
                                        SelectedIndex="0"
                                        HorizontalAlignment="Stretch">
                                        <ComboBoxItem Content="Double" />
                                        <ComboBoxItem Content="Float" />
                                        <ComboBoxItem Content="Int32" />
                                        <ComboBoxItem Content="String" />
                                        <ComboBoxItem Content="Boolean" />
                                    </ComboBox>
                                </Grid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="当前值:" VerticalAlignment="Center" />
                                    <TextBox
                                        Grid.Column="1"
                                        PlaceholderText="0.0" />
                                </Grid>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Page>