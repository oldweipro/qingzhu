<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="qingzhu.Views.SerialPortPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:qingzhu.Views"
    xmlns:viewmodels="using:qingzhu.ViewModels"
    xmlns:converters="using:qingzhu.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.DataContext>
        <viewmodels:SerialPortViewModel />
    </Page.DataContext>

    <Page.Resources>
        <converters:BoolNegationConverter x:Key="BoolNegationConverter" />
    </Page.Resources>

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Spacing="8" Margin="0,0,0,24">
            <TextBlock Text="串口模拟器" Style="{StaticResource TitleTextBlockStyle}" />
            <TextBlock 
                Text="模拟串口设备，进行串口通信测试"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320" />
                <ColumnDefinition Width="16" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Settings -->
            <Border 
                Grid.Column="0"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="16">
                <ScrollViewer>
                    <StackPanel Spacing="16">
                        <TextBlock Text="串口配置" Style="{StaticResource SubtitleTextBlockStyle}" />

                        <!-- Port Selection -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="端口" FontWeight="SemiBold" />
                            <ComboBox 
                                x:Name="PortComboBox"
                                Header=""
                                PlaceholderText="选择端口"
                                HorizontalAlignment="Stretch">
                                <ComboBoxItem Content="COM1" />
                                <ComboBoxItem Content="COM2" />
                                <ComboBoxItem Content="COM3" />
                                <ComboBoxItem Content="COM4" />
                            </ComboBox>
                        </StackPanel>

                        <!-- Baud Rate -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="波特率" FontWeight="SemiBold" />
                            <ComboBox 
                                x:Name="BaudRateComboBox"
                                Header=""
                                SelectedIndex="3"
                                HorizontalAlignment="Stretch">
                                <ComboBoxItem Content="4800" />
                                <ComboBoxItem Content="9600" />
                                <ComboBoxItem Content="19200" />
                                <ComboBoxItem Content="38400" />
                                <ComboBoxItem Content="57600" />
                                <ComboBoxItem Content="115200" />
                            </ComboBox>
                        </StackPanel>

                        <!-- Data Bits -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="数据位" FontWeight="SemiBold" />
                            <ComboBox 
                                x:Name="DataBitsComboBox"
                                Header=""
                                SelectedIndex="3"
                                HorizontalAlignment="Stretch">
                                <ComboBoxItem Content="5" />
                                <ComboBoxItem Content="6" />
                                <ComboBoxItem Content="7" />
                                <ComboBoxItem Content="8" />
                            </ComboBox>
                        </StackPanel>

                        <!-- Parity -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="校验位" FontWeight="SemiBold" />
                            <ComboBox 
                                x:Name="ParityComboBox"
                                Header=""
                                SelectedIndex="0"
                                HorizontalAlignment="Stretch">
                                <ComboBoxItem Content="None" />
                                <ComboBoxItem Content="Odd" />
                                <ComboBoxItem Content="Even" />
                                <ComboBoxItem Content="Mark" />
                                <ComboBoxItem Content="Space" />
                            </ComboBox>
                        </StackPanel>

                        <!-- Stop Bits -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="停止位" FontWeight="SemiBold" />
                            <ComboBox 
                                x:Name="StopBitsComboBox"
                                Header=""
                                SelectedIndex="0"
                                HorizontalAlignment="Stretch">
                                <ComboBoxItem Content="1" />
                                <ComboBoxItem Content="1.5" />
                                <ComboBoxItem Content="2" />
                            </ComboBox>
                        </StackPanel>

                        <!-- Control Buttons -->
                        <StackPanel Spacing="8" Margin="0,16,0,0">
                            <Button 
                                x:Name="OpenPortButton"
                                Content="打开端口" 
                                Style="{StaticResource AccentButtonStyle}"
                                HorizontalAlignment="Stretch" />
                            <Button 
                                x:Name="ClosePortButton"
                                Content="关闭端口" 
                                HorizontalAlignment="Stretch"
                                IsEnabled="False" />
                        </StackPanel>

                        <!-- Status -->
                        <Border 
                            Background="{ThemeResource LayerFillColorDefaultBrush}"
                            CornerRadius="4"
                            Padding="12"
                            Margin="0,16,0,0">
                            <StackPanel Spacing="8">
                                <TextBlock Text="状态信息" FontWeight="SemiBold" />
                                <StackPanel Spacing="4">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock 
                                            Text="连接状态:" 
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                        <TextBlock 
                                            Grid.Column="1"
                                            x:Name="ConnectionStatus"
                                            Text="未连接" 
                                            HorizontalAlignment="Right"
                                            Foreground="{ThemeResource SystemFillColorCriticalBrush}" />
                                    </Grid>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock 
                                            Text="接收字节:" 
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                        <TextBlock 
                                            Grid.Column="1"
                                            x:Name="RxBytes"
                                            Text="0" 
                                            HorizontalAlignment="Right" />
                                    </Grid>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock 
                                            Text="发送字节:" 
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                        <TextBlock 
                                            Grid.Column="1"
                                            x:Name="TxBytes"
                                            Text="0" 
                                            HorizontalAlignment="Right" />
                                    </Grid>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Right Panel - Data Display -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="16" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Data Monitor -->
                <Border 
                    Grid.Row="0"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!-- Header with controls -->
                        <Grid 
                            Grid.Row="0" 
                            Padding="16,12"
                            Background="{ThemeResource LayerFillColorDefaultBrush}"
                            CornerRadius="8,8,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock 
                                Text="数据监视器" 
                                Style="{StaticResource SubtitleTextBlockStyle}"
                                VerticalAlignment="Center" />
                            <StackPanel 
                                Grid.Column="1" 
                                Orientation="Horizontal" 
                                Spacing="8">
                                <ComboBox 
                                    SelectedIndex="0"
                                    MinWidth="120">
                                    <ComboBoxItem Content="HEX" />
                                    <ComboBoxItem Content="ASCII" />
                                    <ComboBoxItem Content="UTF-8" />
                                </ComboBox>
                                <Button Content="清空" />
                                <Button Content="导出" />
                            </StackPanel>
                        </Grid>

                        <!-- Data Display Area -->
                        <TextBox 
                            Grid.Row="1"
                            x:Name="DataMonitorTextBox"
                            IsReadOnly="True"
                            AcceptsReturn="True"
                            TextWrapping="Wrap"
                            FontFamily="Consolas"
                            Padding="16"
                            BorderThickness="0"
                            PlaceholderText="等待数据..." />
                    </Grid>
                </Border>

                <!-- Send Data Panel -->
                <Border 
                    Grid.Row="2"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16">
                    <StackPanel Spacing="12">
                        <TextBlock Text="发送数据" FontWeight="SemiBold" />
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="12" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBox 
                                x:Name="SendDataTextBox"
                                PlaceholderText="输入要发送的数据..."
                                AcceptsReturn="False" />
                            <StackPanel 
                                Grid.Column="2" 
                                Orientation="Horizontal" 
                                Spacing="8">
                                <ComboBox SelectedIndex="0" MinWidth="100">
                                    <ComboBoxItem Content="HEX" />
                                    <ComboBoxItem Content="ASCII" />
                                    <ComboBoxItem Content="UTF-8" />
                                </ComboBox>
                                <Button 
                                    Content="发送" 
                                    Style="{StaticResource AccentButtonStyle}"
                                    IsEnabled="False" />
                            </StackPanel>
                        </Grid>
                        <CheckBox Content="自动添加换行符 (\\r\\n)" />
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Page>
