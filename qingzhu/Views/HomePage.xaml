<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="qingzhu.Views.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:qingzhu.Views"
    xmlns:viewmodels="using:qingzhu.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.DataContext>
        <viewmodels:HomeViewModel />
    </Page.DataContext>

    <ScrollViewer>
        <Grid Padding="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Spacing="8" Margin="0,0,0,24">
                <TextBlock 
                    Text="欢迎使用工业协议模拟器" 
                    Style="{StaticResource TitleTextBlockStyle}" />
                <TextBlock 
                    Text="支持串口、Modbus、TCP/IP、HTTP 等多种工业通信协议的模拟与测试"
                    Style="{StaticResource BodyTextBlockStyle}"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
            </StackPanel>

            <!-- Quick Start Cards -->
            <Grid Grid.Row="1" Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="12" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="12" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Serial Port Card -->
                <Border 
                    Grid.Column="0"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16">
                    <StackPanel Spacing="12">
                        <FontIcon 
                            Glyph="&#xE839;" 
                            FontSize="32"
                            Foreground="{ThemeResource AccentFillColorDefaultBrush}" />
                        <TextBlock 
                            Text="串口通信" 
                            Style="{StaticResource SubtitleTextBlockStyle}" />
                        <TextBlock 
                            Text="模拟串口设备，支持多种波特率和数据格式"
                            TextWrapping="Wrap"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                        <HyperlinkButton Content="开始使用 →" />
                    </StackPanel>
                </Border>

                <!-- Modbus Card -->
                <Border 
                    Grid.Column="2"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16">
                    <StackPanel Spacing="12">
                        <FontIcon 
                            Glyph="&#xE968;" 
                            FontSize="32"
                            Foreground="{ThemeResource AccentFillColorDefaultBrush}" />
                        <TextBlock 
                            Text="Modbus 协议" 
                            Style="{StaticResource SubtitleTextBlockStyle}" />
                        <TextBlock 
                            Text="支持 Modbus RTU/TCP，模拟从站设备"
                            TextWrapping="Wrap"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                        <HyperlinkButton Content="开始使用 →" />
                    </StackPanel>
                </Border>

                <!-- Network Card -->
                <Border 
                    Grid.Column="4"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16">
                    <StackPanel Spacing="12">
                        <FontIcon 
                            Glyph="&#xE774;" 
                            FontSize="32"
                            Foreground="{ThemeResource AccentFillColorDefaultBrush}" />
                        <TextBlock 
                            Text="网络协议" 
                            Style="{StaticResource SubtitleTextBlockStyle}" />
                        <TextBlock 
                            Text="TCP/IP、HTTP、MQTT 等网络协议模拟"
                            TextWrapping="Wrap"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                        <HyperlinkButton Content="开始使用 →" />
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Feature List -->
            <StackPanel Grid.Row="2" Spacing="16">
                <TextBlock 
                    Text="主要功能" 
                    Style="{StaticResource SubtitleTextBlockStyle}" />
                
                <ItemsControl>
                    <Grid Margin="0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="32" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <FontIcon Glyph="&#xE73E;" Foreground="{ThemeResource SystemFillColorSuccessBrush}" />
                        <StackPanel Grid.Column="1" Spacing="4">
                            <TextBlock Text="多协议支持" FontWeight="SemiBold" />
                            <TextBlock 
                                Text="支持串口、Modbus RTU/TCP、TCP/IP、HTTP/REST、MQTT、OPC UA 等多种工业协议"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                        </StackPanel>
                    </Grid>

                    <Grid Margin="0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="32" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <FontIcon Glyph="&#xE73E;" Foreground="{ThemeResource SystemFillColorSuccessBrush}" />
                        <StackPanel Grid.Column="1" Spacing="4">
                            <TextBlock Text="实时监控" FontWeight="SemiBold" />
                            <TextBlock 
                                Text="实时查看通信数据、连接状态、错误日志等信息"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                        </StackPanel>
                    </Grid>

                    <Grid Margin="0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="32" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <FontIcon Glyph="&#xE73E;" Foreground="{ThemeResource SystemFillColorSuccessBrush}" />
                        <StackPanel Grid.Column="1" Spacing="4">
                            <TextBlock Text="数据模拟" FontWeight="SemiBold" />
                            <TextBlock 
                                Text="灵活配置模拟数据，支持静态数据和动态数据生成"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                        </StackPanel>
                    </Grid>

                    <Grid Margin="0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="32" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <FontIcon Glyph="&#xE73E;" Foreground="{ThemeResource SystemFillColorSuccessBrush}" />
                        <StackPanel Grid.Column="1" Spacing="4">
                            <TextBlock Text="数据记录" FontWeight="SemiBold" />
                            <TextBlock 
                                Text="记录所有通信数据，支持导出和分析"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                        </StackPanel>
                    </Grid>
                </ItemsControl>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
