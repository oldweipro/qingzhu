<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="qingzhu.Views.ModbusTcpPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:qingzhu.Views"
    xmlns:viewmodels="using:qingzhu.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.DataContext>
        <viewmodels:ModbusTcpViewModel />
    </Page.DataContext>

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Spacing="8" Margin="0,0,0,24">
            <TextBlock Text="Modbus TCP 模拟器" Style="{StaticResource TitleTextBlockStyle}" />
            <TextBlock 
                Text="模拟 Modbus TCP 服务器，支持多客户端连接"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320" />
                <ColumnDefinition Width="16" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Settings -->
            <Border 
                Grid.Column="0"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="16">
                <ScrollViewer>
                    <StackPanel Spacing="16">
                        <TextBlock Text="服务器配置" Style="{StaticResource SubtitleTextBlockStyle}" />

                        <!-- IP Address -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="IP 地址" FontWeight="SemiBold" />
                            <TextBox 
                                PlaceholderText="0.0.0.0"
                                Text="127.0.0.1" />
                        </StackPanel>

                        <!-- Port -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="端口" FontWeight="SemiBold" />
                            <NumberBox 
                                Value="502"
                                Minimum="1"
                                Maximum="65535"
                                SpinButtonPlacementMode="Inline" />
                        </StackPanel>

                        <!-- Slave ID -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="从站地址" FontWeight="SemiBold" />
                            <NumberBox 
                                Value="1"
                                Minimum="1"
                                Maximum="247"
                                SpinButtonPlacementMode="Inline" />
                        </StackPanel>

                        <!-- Max Connections -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="最大连接数" FontWeight="SemiBold" />
                            <NumberBox 
                                Value="10"
                                Minimum="1"
                                Maximum="100"
                                SpinButtonPlacementMode="Inline" />
                        </StackPanel>

                        <!-- Control Buttons -->
                        <StackPanel Spacing="8" Margin="0,16,0,0">
                            <Button 
                                Content="启动服务器" 
                                Style="{StaticResource AccentButtonStyle}"
                                HorizontalAlignment="Stretch" />
                            <Button 
                                Content="停止服务器" 
                                HorizontalAlignment="Stretch"
                                IsEnabled="False" />
                        </StackPanel>

                        <!-- Status -->
                        <Border 
                            Background="{ThemeResource LayerFillColorDefaultBrush}"
                            CornerRadius="4"
                            Padding="12"
                            Margin="0,16,0,0">
                            <StackPanel Spacing="8">
                                <TextBlock Text="服务器状态" FontWeight="SemiBold" />
                                <StackPanel Spacing="4">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock 
                                            Text="状态:" 
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                        <TextBlock 
                                            Grid.Column="1"
                                            Text="已停止" 
                                            HorizontalAlignment="Right"
                                            Foreground="{ThemeResource SystemFillColorCriticalBrush}" />
                                    </Grid>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock 
                                            Text="当前连接:" 
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                        <TextBlock 
                                            Grid.Column="1"
                                            Text="0" 
                                            HorizontalAlignment="Right" />
                                    </Grid>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock 
                                            Text="总请求数:" 
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                        <TextBlock 
                                            Grid.Column="1"
                                            Text="0" 
                                            HorizontalAlignment="Right" />
                                    </Grid>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Right Panel - Connections & Data -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="16" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Client Connections -->
                <Border 
                    Grid.Row="0"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Grid 
                            Grid.Row="0" 
                            Padding="16,12"
                            Background="{ThemeResource LayerFillColorDefaultBrush}"
                            CornerRadius="8,8,0,0">
                            <TextBlock 
                                Text="客户端连接" 
                                Style="{StaticResource SubtitleTextBlockStyle}"
                                VerticalAlignment="Center" />
                        </Grid>

                        <ListView 
                            Grid.Row="1"
                            SelectionMode="Single"
                            Padding="8">
                            <ListView.Header>
                                <Grid Padding="8" Background="{ThemeResource LayerFillColorDefaultBrush}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="IP 地址" FontWeight="SemiBold" />
                                    <TextBlock Grid.Column="1" Text="端口" FontWeight="SemiBold" />
                                    <TextBlock Grid.Column="2" Text="连接时间" FontWeight="SemiBold" />
                                </Grid>
                            </ListView.Header>
                            <TextBlock 
                                Text="暂无客户端连接"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Margin="0,24" />
                        </ListView>
                    </Grid>
                </Border>

                <!-- Request Log -->
                <Border 
                    Grid.Row="2"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Grid 
                            Grid.Row="0" 
                            Padding="16,12"
                            Background="{ThemeResource LayerFillColorDefaultBrush}"
                            CornerRadius="8,8,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock 
                                Text="请求日志" 
                                Style="{StaticResource SubtitleTextBlockStyle}"
                                VerticalAlignment="Center" />
                            <StackPanel 
                                Grid.Column="1" 
                                Orientation="Horizontal" 
                                Spacing="8">
                                <Button Content="清空" />
                                <Button Content="导出" />
                            </StackPanel>
                        </Grid>

                        <TextBox 
                            Grid.Row="1"
                            IsReadOnly="True"
                            AcceptsReturn="True"
                            TextWrapping="Wrap"
                            FontFamily="Consolas"
                            Padding="16"
                            BorderThickness="0"
                            PlaceholderText="等待请求..." />
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Page>
