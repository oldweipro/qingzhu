<?xml version="1.0" encoding="utf-8"?>

<Page
    x:Class="qingzhu.Views.ModbusTcpPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:viewmodels="using:qingzhu.ViewModels"
    xmlns:converters="using:qingzhu.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:BoolNegationConverter x:Key="BoolNegationConverter" />
        <converters:IntToVisibilityConverter x:Key="IntToVisibilityConverter" />
    </Page.Resources>

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Spacing="8" Margin="0,0,0,24">
            <TextBlock Text="Modbus TCP 模拟器" Style="{StaticResource TitleTextBlockStyle}" />
            <TextBlock
                Text="模拟 Modbus TCP 服务器，支持多客户端连接"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320" />
                <ColumnDefinition Width="16" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Settings -->
            <Border
                Grid.Column="0"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="16">
                <ScrollViewer>
                    <StackPanel Spacing="16">
                        <TextBlock Text="服务器配置" Style="{StaticResource SubtitleTextBlockStyle}" />

                        <!-- IP Address -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="IP 地址" FontWeight="SemiBold" />
                            <TextBox
                                Text="{x:Bind ViewModel.IpAddress, Mode=TwoWay}"
                                PlaceholderText="0.0.0.0"
                                IsEnabled="{x:Bind ViewModel.IsRunning, Mode=OneWay, Converter={StaticResource BoolNegationConverter}}" />
                        </StackPanel>

                        <!-- Port -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="端口" FontWeight="SemiBold" />
                            <NumberBox
                                Value="{x:Bind ViewModel.Port, Mode=TwoWay}"
                                Minimum="1"
                                Maximum="65535"
                                SpinButtonPlacementMode="Inline"
                                IsEnabled="{x:Bind ViewModel.IsRunning, Mode=OneWay, Converter={StaticResource BoolNegationConverter}}" />
                        </StackPanel>

                        <!-- Slave ID -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="从站地址" FontWeight="SemiBold" />
                            <NumberBox
                                Value="{x:Bind ViewModel.SlaveId, Mode=TwoWay}"
                                Minimum="1"
                                Maximum="247"
                                SpinButtonPlacementMode="Inline"
                                IsEnabled="{x:Bind ViewModel.IsRunning, Mode=OneWay, Converter={StaticResource BoolNegationConverter}}" />
                        </StackPanel>

                        <!-- Max Connections -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="寄存器数量" FontWeight="SemiBold" />
                            <NumberBox
                                Value="{x:Bind ViewModel.RegisterCount, Mode=TwoWay}"
                                Minimum="1"
                                Maximum="10000"
                                SpinButtonPlacementMode="Inline"
                                IsEnabled="{x:Bind ViewModel.IsRunning, Mode=OneWay, Converter={StaticResource BoolNegationConverter}}" />
                        </StackPanel>

                        <!-- Max Connections -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="最大连接数" FontWeight="SemiBold" />
                            <NumberBox
                                Value="{x:Bind ViewModel.MaxConnections, Mode=TwoWay}"
                                Minimum="1"
                                Maximum="100"
                                SpinButtonPlacementMode="Inline"
                                IsEnabled="{x:Bind ViewModel.IsRunning, Mode=OneWay, Converter={StaticResource BoolNegationConverter}}" />
                        </StackPanel>

                        <!-- Control Buttons -->
                        <StackPanel Spacing="8" Margin="0,16,0,0">
                            <Button
                                Content="启动服务器"
                                Style="{StaticResource AccentButtonStyle}"
                                HorizontalAlignment="Stretch"
                                Command="{x:Bind ViewModel.StartServerCommand}"
                                IsEnabled="{x:Bind ViewModel.IsRunning, Mode=OneWay, Converter={StaticResource BoolNegationConverter}}" />
                            <Button
                                Content="停止服务器"
                                HorizontalAlignment="Stretch"
                                Command="{x:Bind ViewModel.StopServerCommand}"
                                IsEnabled="{x:Bind ViewModel.IsRunning, Mode=OneWay}" />
                        </StackPanel>

                        <!-- Status -->
                        <Border
                            Background="{ThemeResource LayerFillColorDefaultBrush}"
                            CornerRadius="4"
                            Padding="12"
                            Margin="0,16,0,0">
                            <StackPanel Spacing="8">
                                <TextBlock Text="服务器状态" FontWeight="SemiBold" />
                                <StackPanel Spacing="4">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Text="状态:"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                        <TextBlock
                                            Grid.Column="1"
                                            Text="{x:Bind ViewModel.Status, Mode=OneWay}"
                                            HorizontalAlignment="Right" />
                                    </Grid>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Text="当前连接:"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                        <TextBlock
                                            Grid.Column="1"
                                            Text="{x:Bind ViewModel.ConnectionCount, Mode=OneWay}"
                                            HorizontalAlignment="Right" />
                                    </Grid>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Text="总请求数:"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                        <TextBlock
                                            Grid.Column="1"
                                            Text="{x:Bind ViewModel.RequestCount, Mode=OneWay}"
                                            HorizontalAlignment="Right" />
                                    </Grid>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Right Panel - Connections & Data -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="16" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Client Connections -->
                <Border
                    Grid.Row="0"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Grid
                            Grid.Row="0"
                            Padding="16,12"
                            Background="{ThemeResource LayerFillColorDefaultBrush}"
                            CornerRadius="8,8,0,0">
                            <TextBlock
                                Text="客户端连接"
                                Style="{StaticResource SubtitleTextBlockStyle}"
                                VerticalAlignment="Center" />
                        </Grid>

                        <Grid Grid.Row="1">
                            <ListView
                                ItemsSource="{x:Bind ViewModel.ConnectedClients, Mode=OneWay}"
                                SelectionMode="Single"
                                Padding="8">
                                <ListView.Header>
                                    <Grid Padding="8" Background="{ThemeResource LayerFillColorDefaultBrush}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="150" />
                                            <ColumnDefinition Width="100" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="客户端" FontWeight="SemiBold" />
                                        <TextBlock Grid.Column="1" Text="端口" FontWeight="SemiBold" />
                                        <TextBlock Grid.Column="2" Text="连接时间" FontWeight="SemiBold" />
                                    </Grid>
                                </ListView.Header>
                                <ListView.ItemTemplate>
                                    <DataTemplate x:DataType="viewmodels:ClientConnection">
                                        <Grid Padding="8,12">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="150" />
                                                <ColumnDefinition Width="100" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                Text="{x:Bind IpAddress}"
                                                VerticalAlignment="Center" />
                                            <TextBlock
                                                Grid.Column="1"
                                                Text="{x:Bind Port}"
                                                VerticalAlignment="Center" />
                                            <TextBlock
                                                Grid.Column="2"
                                                Text="{x:Bind ConnectedTime}"
                                                VerticalAlignment="Center" />
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                    </Style>
                                </ListView.ItemContainerStyle>
                            </ListView>

                            <!-- 空状态提示 -->
                            <TextBlock
                                Text="暂无客户端连接"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Visibility="{x:Bind ViewModel.ConnectionCount, Mode=OneWay, Converter={StaticResource IntToVisibilityConverter}}" />
                        </Grid>
                    </Grid>
                </Border>


                <!-- Request Log -->
                <Border
                    Grid.Row="2"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Grid
                            Grid.Row="0"
                            Padding="16,12"
                            Background="{ThemeResource LayerFillColorDefaultBrush}"
                            CornerRadius="8,8,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Text="请求日志"
                                Style="{StaticResource SubtitleTextBlockStyle}"
                                VerticalAlignment="Center" />
                            <StackPanel
                                Grid.Column="1"
                                Orientation="Horizontal"
                                Spacing="8">
                                <Button
                                    Content="清空"
                                    Command="{x:Bind ViewModel.ClearLogCommand}" />
                                <Button
                                    Content="导出"
                                    Command="{x:Bind ViewModel.ExportLogCommand}" />
                            </StackPanel>
                        </Grid>

                        <ScrollViewer
                            Grid.Row="1"
                            x:Name="LogScrollViewer"
                            VerticalScrollBarVisibility="Auto"
                            HorizontalScrollBarVisibility="Auto">
                            <TextBox
                                Text="{x:Bind ViewModel.RequestLog, Mode=OneWay}"
                                IsReadOnly="True"
                                AcceptsReturn="True"
                                TextWrapping="Wrap"
                                FontFamily="Consolas"
                                Padding="16"
                                BorderThickness="0"
                                Background="Transparent"
                                PlaceholderText="等待请求..." />
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Page>