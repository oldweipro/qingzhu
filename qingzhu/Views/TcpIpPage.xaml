<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="qingzhu.Views.TcpIpPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:qingzhu.Views"
    xmlns:viewmodels="using:qingzhu.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.DataContext>
        <viewmodels:TcpIpViewModel />
    </Page.DataContext>

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Spacing="8" Margin="0,0,0,24">
            <TextBlock Text="TCP/IP 模拟器" Style="{StaticResource TitleTextBlockStyle}" />
            <TextBlock 
                Text="TCP 服务器/客户端模拟，支持自定义协议测试"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320" />
                <ColumnDefinition Width="16" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Settings -->
            <Border 
                Grid.Column="0"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="16">
                <ScrollViewer>
                    <StackPanel Spacing="16">
                        <TextBlock Text="连接配置" Style="{StaticResource SubtitleTextBlockStyle}" />

                        <!-- Mode Selection -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="运行模式" FontWeight="SemiBold" />
                            <RadioButtons>
                                <RadioButton Content="TCP 服务器" IsChecked="True" />
                                <RadioButton Content="TCP 客户端" />
                            </RadioButtons>
                        </StackPanel>

                        <!-- Server Settings -->
                        <Border 
                            Background="{ThemeResource LayerFillColorDefaultBrush}"
                            CornerRadius="4"
                            Padding="12">
                            <StackPanel Spacing="12">
                                <TextBlock Text="服务器设置" FontWeight="SemiBold" />
                                
                                <StackPanel Spacing="8">
                                    <TextBlock Text="监听地址" />
                                    <TextBox Text="0.0.0.0" />
                                </StackPanel>

                                <StackPanel Spacing="8">
                                    <TextBlock Text="监听端口" />
                                    <NumberBox 
                                        Value="8080"
                                        Minimum="1"
                                        Maximum="65535"
                                        SpinButtonPlacementMode="Inline" />
                                </StackPanel>

                                <StackPanel Spacing="8">
                                    <TextBlock Text="最大连接数" />
                                    <NumberBox 
                                        Value="10"
                                        Minimum="1"
                                        Maximum="100"
                                        SpinButtonPlacementMode="Inline" />
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Client Settings -->
                        <Border 
                            Background="{ThemeResource LayerFillColorDefaultBrush}"
                            CornerRadius="4"
                            Padding="12"
                            Opacity="0.5">
                            <StackPanel Spacing="12">
                                <TextBlock Text="客户端设置" FontWeight="SemiBold" />
                                
                                <StackPanel Spacing="8">
                                    <TextBlock Text="服务器地址" />
                                    <TextBox PlaceholderText="192.168.1.100" IsEnabled="False" />
                                </StackPanel>

                                <StackPanel Spacing="8">
                                    <TextBlock Text="服务器端口" />
                                    <NumberBox 
                                        Value="8080"
                                        Minimum="1"
                                        Maximum="65535"
                                        SpinButtonPlacementMode="Inline"
                                        IsEnabled="False" />
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Control Buttons -->
                        <StackPanel Spacing="8" Margin="0,16,0,0">
                            <Button 
                                Content="启动服务器" 
                                Style="{StaticResource AccentButtonStyle}"
                                HorizontalAlignment="Stretch" />
                            <Button 
                                Content="停止服务器" 
                                HorizontalAlignment="Stretch"
                                IsEnabled="False" />
                        </StackPanel>

                        <!-- Status -->
                        <Border 
                            Background="{ThemeResource LayerFillColorDefaultBrush}"
                            CornerRadius="4"
                            Padding="12"
                            Margin="0,16,0,0">
                            <StackPanel Spacing="8">
                                <TextBlock Text="运行状态" FontWeight="SemiBold" />
                                <StackPanel Spacing="4">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock 
                                            Text="状态:" 
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                        <TextBlock 
                                            Grid.Column="1"
                                            Text="已停止" 
                                            HorizontalAlignment="Right"
                                            Foreground="{ThemeResource SystemFillColorCriticalBrush}" />
                                    </Grid>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock 
                                            Text="活动连接:" 
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                        <TextBlock 
                                            Grid.Column="1"
                                            Text="0" 
                                            HorizontalAlignment="Right" />
                                    </Grid>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Right Panel - Communication -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="16" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Data Monitor -->
                <Border 
                    Grid.Row="0"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Grid 
                            Grid.Row="0" 
                            Padding="16,12"
                            Background="{ThemeResource LayerFillColorDefaultBrush}"
                            CornerRadius="8,8,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock 
                                Text="通信监视器" 
                                Style="{StaticResource SubtitleTextBlockStyle}"
                                VerticalAlignment="Center" />
                            <StackPanel 
                                Grid.Column="1" 
                                Orientation="Horizontal" 
                                Spacing="8">
                                <ComboBox SelectedIndex="0" MinWidth="120">
                                    <ComboBoxItem Content="HEX" />
                                    <ComboBoxItem Content="ASCII" />
                                    <ComboBoxItem Content="UTF-8" />
                                </ComboBox>
                                <ToggleButton Content="自动滚动" IsChecked="True" />
                                <Button Content="清空" />
                                <Button Content="导出" />
                            </StackPanel>
                        </Grid>

                        <TextBox 
                            Grid.Row="1"
                            IsReadOnly="True"
                            AcceptsReturn="True"
                            TextWrapping="Wrap"
                            FontFamily="Consolas"
                            Padding="16"
                            BorderThickness="0"
                            PlaceholderText="等待数据..." />
                    </Grid>
                </Border>

                <!-- Send Panel -->
                <Border 
                    Grid.Row="2"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16">
                    <StackPanel Spacing="12">
                        <TextBlock Text="发送数据" FontWeight="SemiBold" />
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <TextBox 
                                Height="80"
                                PlaceholderText="输入要发送的数据..."
                                AcceptsReturn="True"
                                TextWrapping="Wrap" />
                            <Grid Grid.Row="1" Margin="0,12,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="12" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Orientation="Horizontal" Spacing="12">
                                    <ComboBox SelectedIndex="0" MinWidth="100">
                                        <ComboBoxItem Content="HEX" />
                                        <ComboBoxItem Content="ASCII" />
                                        <ComboBoxItem Content="UTF-8" />
                                    </ComboBox>
                                    <CheckBox Content="添加换行符" />
                                </StackPanel>
                                <StackPanel 
                                    Grid.Column="2" 
                                    Orientation="Horizontal" 
                                    Spacing="8">
                                    <Button 
                                        Content="发送" 
                                        Style="{StaticResource AccentButtonStyle}"
                                        MinWidth="100"
                                        IsEnabled="False" />
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Page>
