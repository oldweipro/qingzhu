<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="qingzhu.Views.MqttPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:qingzhu.Views"
    xmlns:viewmodels="using:qingzhu.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.DataContext>
        <viewmodels:MqttViewModel />
    </Page.DataContext>

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Spacing="8" Margin="0,0,0,24">
            <TextBlock Text="MQTT 模拟器" Style="{StaticResource TitleTextBlockStyle}" />
            <TextBlock 
                Text="MQTT Broker/Client 模拟，支持发布/订阅测试"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320" />
                <ColumnDefinition Width="16" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Settings -->
            <Border 
                Grid.Column="0"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="16">
                <ScrollViewer>
                    <StackPanel Spacing="16">
                        <TextBlock Text="MQTT 配置" Style="{StaticResource SubtitleTextBlockStyle}" />

                        <!-- Mode Selection -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="运行模式" FontWeight="SemiBold" />
                            <RadioButtons>
                                <RadioButton Content="MQTT Broker" IsChecked="True" />
                                <RadioButton Content="MQTT Client" />
                            </RadioButtons>
                        </StackPanel>

                        <!-- Broker Settings -->
                        <Border 
                            Background="{ThemeResource LayerFillColorDefaultBrush}"
                            CornerRadius="4"
                            Padding="12">
                            <StackPanel Spacing="12">
                                <TextBlock Text="Broker 设置" FontWeight="SemiBold" />
                                
                                <StackPanel Spacing="8">
                                    <TextBlock Text="监听地址" />
                                    <TextBox Text="0.0.0.0" />
                                </StackPanel>

                                <StackPanel Spacing="8">
                                    <TextBlock Text="端口" />
                                    <NumberBox 
                                        Value="1883"
                                        Minimum="1"
                                        Maximum="65535"
                                        SpinButtonPlacementMode="Inline" />
                                </StackPanel>

                                <CheckBox Content="启用认证" />
                                <CheckBox Content="启用 WebSocket (8083)" />
                            </StackPanel>
                        </Border>

                        <!-- Client Settings -->
                        <Border 
                            Background="{ThemeResource LayerFillColorDefaultBrush}"
                            CornerRadius="4"
                            Padding="12"
                            Opacity="0.5">
                            <StackPanel Spacing="12">
                                <TextBlock Text="Client 设置" FontWeight="SemiBold" />
                                
                                <StackPanel Spacing="8">
                                    <TextBlock Text="Broker 地址" />
                                    <TextBox PlaceholderText="mqtt://localhost:1883" IsEnabled="False" />
                                </StackPanel>

                                <StackPanel Spacing="8">
                                    <TextBlock Text="Client ID" />
                                    <TextBox PlaceholderText="自动生成" IsEnabled="False" />
                                </StackPanel>

                                <CheckBox Content="Clean Session" IsEnabled="False" />
                            </StackPanel>
                        </Border>

                        <!-- Control Buttons -->
                        <StackPanel Spacing="8" Margin="0,16,0,0">
                            <Button 
                                Content="启动 Broker" 
                                Style="{StaticResource AccentButtonStyle}"
                                HorizontalAlignment="Stretch" />
                            <Button 
                                Content="停止 Broker" 
                                HorizontalAlignment="Stretch"
                                IsEnabled="False" />
                        </StackPanel>

                        <!-- Status -->
                        <Border 
                            Background="{ThemeResource LayerFillColorDefaultBrush}"
                            CornerRadius="4"
                            Padding="12"
                            Margin="0,16,0,0">
                            <StackPanel Spacing="8">
                                <TextBlock Text="运行状态" FontWeight="SemiBold" />
                                <StackPanel Spacing="4">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock 
                                            Text="状态:" 
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                        <TextBlock 
                                            Grid.Column="1"
                                            Text="已停止" 
                                            HorizontalAlignment="Right"
                                            Foreground="{ThemeResource SystemFillColorCriticalBrush}" />
                                    </Grid>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock 
                                            Text="连接数:" 
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                        <TextBlock 
                                            Grid.Column="1"
                                            Text="0" 
                                            HorizontalAlignment="Right" />
                                    </Grid>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock 
                                            Text="消息数:" 
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                        <TextBlock 
                                            Grid.Column="1"
                                            Text="0" 
                                            HorizontalAlignment="Right" />
                                    </Grid>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Right Panel - Topics & Messages -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="16" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Message Monitor -->
                <Border 
                    Grid.Row="0"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Grid 
                            Grid.Row="0" 
                            Padding="16,12"
                            Background="{ThemeResource LayerFillColorDefaultBrush}"
                            CornerRadius="8,8,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock 
                                Text="消息监视器" 
                                Style="{StaticResource SubtitleTextBlockStyle}"
                                VerticalAlignment="Center" />
                            <StackPanel 
                                Grid.Column="1" 
                                Orientation="Horizontal" 
                                Spacing="8">
                                <ComboBox SelectedIndex="0" MinWidth="120">
                                    <ComboBoxItem Content="所有主题" />
                                    <ComboBoxItem Content="已订阅" />
                                </ComboBox>
                                <Button Content="清空" />
                                <Button Content="导出" />
                            </StackPanel>
                        </Grid>

                        <ListView Grid.Row="1" SelectionMode="Single">
                            <ListView.Header>
                                <Grid Padding="12,8" Background="{ThemeResource LayerFillColorDefaultBrush}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="60" />
                                        <ColumnDefinition Width="150" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="时间" FontWeight="SemiBold" />
                                    <TextBlock Grid.Column="1" Text="主题" FontWeight="SemiBold" />
                                    <TextBlock Grid.Column="2" Text="QoS" FontWeight="SemiBold" />
                                    <TextBlock Grid.Column="3" Text="Payload" FontWeight="SemiBold" />
                                </Grid>
                            </ListView.Header>
                            <TextBlock 
                                Text="等待消息..."
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                HorizontalAlignment="Center"
                                Margin="0,24" />
                        </ListView>
                    </Grid>
                </Border>

                <!-- Publish Panel -->
                <Border 
                    Grid.Row="2"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16">
                    <StackPanel Spacing="12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock 
                                Text="发布消息" 
                                FontWeight="SemiBold"
                                VerticalAlignment="Center" />
                            <Button 
                                Grid.Column="1"
                                Content="订阅管理" />
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="12" />
                                <ColumnDefinition Width="150" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="主题:" VerticalAlignment="Center" />
                            <TextBox 
                                Grid.Column="1"
                                PlaceholderText="topic/name" />
                            <ComboBox 
                                Grid.Column="3"
                                Header="QoS"
                                SelectedIndex="0"
                                HorizontalAlignment="Stretch">
                                <ComboBoxItem Content="QoS 0" />
                                <ComboBoxItem Content="QoS 1" />
                                <ComboBoxItem Content="QoS 2" />
                            </ComboBox>
                        </Grid>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <TextBox 
                                PlaceholderText="消息内容 (Payload)..."
                                AcceptsReturn="True"
                                TextWrapping="Wrap"
                                Height="80" />
                            <Grid Grid.Row="1" Margin="0,12,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <CheckBox Content="Retain" VerticalAlignment="Center" />
                                <Button 
                                    Grid.Column="1"
                                    Content="发布" 
                                    Style="{StaticResource AccentButtonStyle}"
                                    MinWidth="100"
                                    IsEnabled="False" />
                            </Grid>
                        </Grid>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Page>
