<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="qingzhu.Views.ModbusTcpClientPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:viewmodels="using:qingzhu.ViewModels"
    xmlns:converters="using:qingzhu.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:BoolNegationConverter x:Key="BoolNegationConverter" />
    </Page.Resources>

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Spacing="8" Margin="0,0,0,24">
            <TextBlock Text="Modbus TCP 客户端" Style="{StaticResource TitleTextBlockStyle}" />
            <TextBlock 
                Text="连接到 Modbus TCP 服务器，读写数据"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400" />
                <ColumnDefinition Width="16" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Connection & Operations -->
            <ScrollViewer Grid.Column="0">
                <StackPanel Spacing="16">
                    <!-- Connection Settings -->
                    <Border 
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="16">
                        <StackPanel Spacing="16">
                            <TextBlock Text="连接配置" Style="{StaticResource SubtitleTextBlockStyle}" />

                            <!-- IP Address -->
                            <StackPanel Spacing="8">
                                <TextBlock Text="IP 地址" FontWeight="SemiBold" />
                                <TextBox 
                                    Text="{x:Bind ViewModel.IpAddress, Mode=TwoWay}"
                                    PlaceholderText="127.0.0.1"
                                    IsEnabled="{x:Bind ViewModel.IsConnected, Mode=OneWay, Converter={StaticResource BoolNegationConverter}}" />
                            </StackPanel>

                            <!-- Port -->
                            <StackPanel Spacing="8">
                                <TextBlock Text="端口" FontWeight="SemiBold" />
                                <NumberBox 
                                    Value="{x:Bind ViewModel.Port, Mode=TwoWay}"
                                    Minimum="1"
                                    Maximum="65535"
                                    SpinButtonPlacementMode="Inline"
                                    IsEnabled="{x:Bind ViewModel.IsConnected, Mode=OneWay, Converter={StaticResource BoolNegationConverter}}" />
                            </StackPanel>

                            <!-- Slave ID -->
                            <StackPanel Spacing="8">
                                <TextBlock Text="从站地址" FontWeight="SemiBold" />
                                <NumberBox 
                                    Value="{x:Bind ViewModel.SlaveId, Mode=TwoWay}"
                                    Minimum="1"
                                    Maximum="247"
                                    SpinButtonPlacementMode="Inline" />
                            </StackPanel>

                            <!-- Connect Buttons -->
                            <StackPanel Spacing="8">
                                <Button 
                                    Content="连接" 
                                    Style="{StaticResource AccentButtonStyle}"
                                    HorizontalAlignment="Stretch"
                                    Command="{x:Bind ViewModel.ConnectCommand}"
                                    IsEnabled="{x:Bind ViewModel.IsConnected, Mode=OneWay, Converter={StaticResource BoolNegationConverter}}" />
                                <Button 
                                    Content="断开连接" 
                                    HorizontalAlignment="Stretch"
                                    Command="{x:Bind ViewModel.DisconnectCommand}"
                                    IsEnabled="{x:Bind ViewModel.IsConnected, Mode=OneWay}" />
                            </StackPanel>

                            <!-- Status -->
                            <Border 
                                Background="{ThemeResource LayerFillColorDefaultBrush}"
                                CornerRadius="4"
                                Padding="12">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock 
                                        Text="状态:" 
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                    <TextBlock 
                                        Grid.Column="1"
                                        Text="{x:Bind ViewModel.Status, Mode=OneWay}" 
                                        HorizontalAlignment="Right"
                                        FontWeight="SemiBold" />
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Function Operations -->
                    <Border 
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="16">
                        <StackPanel Spacing="16">
                            <TextBlock Text="功能操作" Style="{StaticResource SubtitleTextBlockStyle}" />

                            <!-- Function Code -->
                            <StackPanel Spacing="8">
                                <TextBlock Text="功能码" FontWeight="SemiBold" />
                                <ComboBox 
                                    ItemsSource="{x:Bind ViewModel.FunctionCodes}"
                                    SelectedItem="{x:Bind ViewModel.SelectedFunction, Mode=TwoWay}"
                                    HorizontalAlignment="Stretch" />
                            </StackPanel>

                            <!-- Start Address -->
                            <StackPanel Spacing="8">
                                <TextBlock Text="起始地址" FontWeight="SemiBold" />
                                <NumberBox 
                                    Value="{x:Bind ViewModel.StartAddress, Mode=TwoWay}"
                                    Minimum="1"
                                    Maximum="65535"
                                    SpinButtonPlacementMode="Inline" />
                            </StackPanel>

                            <!-- Quantity -->
                            <StackPanel Spacing="8">
                                <TextBlock Text="数量/长度" FontWeight="SemiBold" />
                                <NumberBox 
                                    Value="{x:Bind ViewModel.Quantity, Mode=TwoWay}"
                                    Minimum="1"
                                    Maximum="125"
                                    SpinButtonPlacementMode="Inline" />
                            </StackPanel>

                            <!-- Write Value -->
                            <StackPanel Spacing="8">
                                <TextBlock Text="写入值" FontWeight="SemiBold" />
                                <TextBox 
                                    Text="{x:Bind ViewModel.WriteValue, Mode=TwoWay}"
                                    PlaceholderText="单个: 123 或 多个: 1,2,3"
                                    AcceptsReturn="False" />
                                <TextBlock 
                                    Text="线圈: 0/1 或 false/true，寄存器: 整数值，多个用逗号分隔"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    TextWrapping="Wrap"
                                    Style="{StaticResource CaptionTextBlockStyle}" />
                            </StackPanel>

                            <!-- Execute Button -->
                            <Button 
                                Content="执行" 
                                HorizontalAlignment="Stretch"
                                Command="{x:Bind ViewModel.ExecuteFunctionCommand}"
                                IsEnabled="{x:Bind ViewModel.IsConnected, Mode=OneWay}" />

                            <!-- Read Result -->
                            <Border 
                                Background="{ThemeResource LayerFillColorDefaultBrush}"
                                CornerRadius="4"
                                Padding="12">
                                <StackPanel Spacing="8">
                                    <TextBlock Text="操作结果" FontWeight="SemiBold" />
                                    <TextBlock 
                                        Text="{x:Bind ViewModel.ReadResult, Mode=OneWay}" 
                                        TextWrapping="Wrap"
                                        FontFamily="Consolas" />
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Right Panel - Operation Log -->
            <Border 
                Grid.Column="2"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Grid 
                        Grid.Row="0" 
                        Padding="16,12"
                        Background="{ThemeResource LayerFillColorDefaultBrush}"
                        CornerRadius="8,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock 
                            Text="操作日志" 
                            Style="{StaticResource SubtitleTextBlockStyle}"
                            VerticalAlignment="Center" />
                        <Button 
                            Grid.Column="1" 
                            Content="清空" 
                            Command="{x:Bind ViewModel.ClearLogCommand}" />
                    </Grid>

                    <!-- Log Content -->
                    <ScrollViewer 
                        Grid.Row="1"
                        VerticalScrollBarVisibility="Auto"
                        HorizontalScrollBarVisibility="Auto">
                        <TextBox 
                            Text="{x:Bind ViewModel.OperationLog, Mode=OneWay}"
                            IsReadOnly="True"
                            AcceptsReturn="True"
                            TextWrapping="Wrap"
                            FontFamily="Consolas"
                            Padding="16"
                            BorderThickness="0"
                            Background="Transparent"
                            PlaceholderText="操作日志将显示在这里..." />
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
