<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="qingzhu.Views.HttpPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:qingzhu.Views"
    xmlns:viewmodels="using:qingzhu.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.DataContext>
        <viewmodels:HttpViewModel />
    </Page.DataContext>

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Spacing="8" Margin="0,0,0,24">
            <TextBlock Text="HTTP/REST 模拟器" Style="{StaticResource TitleTextBlockStyle}" />
            <TextBlock 
                Text="模拟 HTTP 服务器，支持 RESTful API 测试"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320" />
                <ColumnDefinition Width="16" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Settings -->
            <Border 
                Grid.Column="0"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="16">
                <ScrollViewer>
                    <StackPanel Spacing="16">
                        <TextBlock Text="服务器配置" Style="{StaticResource SubtitleTextBlockStyle}" />

                        <!-- Server Settings -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="监听地址" FontWeight="SemiBold" />
                            <TextBox Text="localhost" />
                        </StackPanel>

                        <StackPanel Spacing="8">
                            <TextBlock Text="端口" FontWeight="SemiBold" />
                            <NumberBox 
                                Value="8080"
                                Minimum="1"
                                Maximum="65535"
                                SpinButtonPlacementMode="Inline" />
                        </StackPanel>

                        <!-- HTTPS Settings -->
                        <CheckBox Content="启用 HTTPS" />

                        <!-- CORS Settings -->
                        <Expander Header="CORS 设置" HorizontalAlignment="Stretch">
                            <StackPanel Spacing="8" Padding="0,8,0,0">
                                <CheckBox Content="允许跨域请求" />
                                <TextBox PlaceholderText="允许的域名 (逗号分隔)" />
                            </StackPanel>
                        </Expander>

                        <!-- Control Buttons -->
                        <StackPanel Spacing="8" Margin="0,16,0,0">
                            <Button 
                                Content="启动服务器" 
                                Style="{StaticResource AccentButtonStyle}"
                                HorizontalAlignment="Stretch" />
                            <Button 
                                Content="停止服务器" 
                                HorizontalAlignment="Stretch"
                                IsEnabled="False" />
                        </StackPanel>

                        <!-- Status -->
                        <Border 
                            Background="{ThemeResource LayerFillColorDefaultBrush}"
                            CornerRadius="4"
                            Padding="12"
                            Margin="0,16,0,0">
                            <StackPanel Spacing="8">
                                <TextBlock Text="服务器状态" FontWeight="SemiBold" />
                                <StackPanel Spacing="4">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock 
                                            Text="状态:" 
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                        <TextBlock 
                                            Grid.Column="1"
                                            Text="已停止" 
                                            HorizontalAlignment="Right"
                                            Foreground="{ThemeResource SystemFillColorCriticalBrush}" />
                                    </Grid>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock 
                                            Text="URL:" 
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                        <TextBlock 
                                            Grid.Column="1"
                                            Text="-" 
                                            HorizontalAlignment="Right"
                                            FontFamily="Consolas" />
                                    </Grid>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock 
                                            Text="请求数:" 
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                        <TextBlock 
                                            Grid.Column="1"
                                            Text="0" 
                                            HorizontalAlignment="Right" />
                                    </Grid>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Right Panel - API Endpoints & Logs -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="16" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- API Endpoints -->
                <Border 
                    Grid.Row="0"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Grid 
                            Grid.Row="0" 
                            Padding="16,12"
                            Background="{ThemeResource LayerFillColorDefaultBrush}"
                            CornerRadius="8,8,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock 
                                Text="API 端点" 
                                Style="{StaticResource SubtitleTextBlockStyle}"
                                VerticalAlignment="Center" />
                            <StackPanel 
                                Grid.Column="1" 
                                Orientation="Horizontal" 
                                Spacing="8">
                                <Button Content="添加" />
                                <Button Content="导入" />
                            </StackPanel>
                        </Grid>

                        <ScrollViewer Grid.Row="1" Padding="16">
                            <StackPanel Spacing="8">
                                <!-- Sample Endpoint -->
                                <Border 
                                    Background="{ThemeResource LayerFillColorDefaultBrush}"
                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Padding="12">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <Border 
                                                Background="{ThemeResource SystemFillColorSuccessBrush}"
                                                CornerRadius="4"
                                                Padding="8,4"
                                                Margin="0,0,8,0">
                                                <TextBlock Text="GET" FontWeight="SemiBold" />
                                            </Border>
                                            <TextBlock 
                                                Grid.Column="1"
                                                Text="/api/data"
                                                FontFamily="Consolas"
                                                VerticalAlignment="Center" />
                                            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="4">
                                                <Button Content="编辑" />
                                                <Button Content="删除" />
                                            </StackPanel>
                                        </Grid>
                                        <TextBlock 
                                            Grid.Row="1"
                                            Text="返回模拟数据"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            Margin="0,8,0,0" />
                                    </Grid>
                                </Border>

                                <TextBlock 
                                    Text="点击'添加'按钮创建新的 API 端点"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    HorizontalAlignment="Center"
                                    Margin="0,24" />
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Border>

                <!-- Request Logs -->
                <Border 
                    Grid.Row="2"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Grid 
                            Grid.Row="0" 
                            Padding="16,12"
                            Background="{ThemeResource LayerFillColorDefaultBrush}"
                            CornerRadius="8,8,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock 
                                Text="请求日志" 
                                Style="{StaticResource SubtitleTextBlockStyle}"
                                VerticalAlignment="Center" />
                            <StackPanel 
                                Grid.Column="1" 
                                Orientation="Horizontal" 
                                Spacing="8">
                                <ToggleButton Content="实时" IsChecked="True" />
                                <Button Content="清空" />
                                <Button Content="导出" />
                            </StackPanel>
                        </Grid>

                        <ListView Grid.Row="1" SelectionMode="Single">
                            <ListView.Header>
                                <Grid Padding="12,8" Background="{ThemeResource LayerFillColorDefaultBrush}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="80" />
                                        <ColumnDefinition Width="60" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="150" />
                                        <ColumnDefinition Width="80" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="时间" FontWeight="SemiBold" />
                                    <TextBlock Grid.Column="1" Text="方法" FontWeight="SemiBold" />
                                    <TextBlock Grid.Column="2" Text="路径" FontWeight="SemiBold" />
                                    <TextBlock Grid.Column="3" Text="来源" FontWeight="SemiBold" />
                                    <TextBlock Grid.Column="4" Text="状态" FontWeight="SemiBold" />
                                </Grid>
                            </ListView.Header>
                            <TextBlock 
                                Text="等待请求..."
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                HorizontalAlignment="Center"
                                Margin="0,24" />
                        </ListView>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Page>
